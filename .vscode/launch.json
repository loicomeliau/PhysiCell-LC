{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run Program",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/project",  // Remplacez avec le nom de votre ex√©cutable
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "build",
        "miDebuggerPath": "/usr/bin/gdb",  // Remplacez avec le chemin vers votre gdb
        "sourceFileMap": {
          "${workspaceFolder}/BioFVM": "${workspaceFolder}",
          "${workspaceFolder}/core": "${workspaceFolder}",
          "${workspaceFolder}/modules": "${workspaceFolder}",
          "${workspaceFolder}/custom_modules": "${workspaceFolder}",
        },
      }
    ]
  }
  